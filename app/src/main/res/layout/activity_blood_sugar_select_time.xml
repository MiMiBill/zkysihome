<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="750px"
    android:layout_height="@dimen/px450">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择您的测试时间"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/px53"
        android:layout_marginLeft="@dimen/px60"
        android:textSize="@dimen/px30"
        />

    <Button
        android:id="@+id/btn_early_morning"
        android:layout_width="@dimen/px140"
        android:layout_height="@dimen/px48"
        android:text="凌晨"
        android:textColor="#333333"
        android:textSize="@dimen/px24"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/px35"
        android:layout_marginLeft="95px"
        android:background="@mipmap/blood_sugar_alert_time_select"
        />

    <Button
        android:id="@+id/btn_before_breakfast"
        android:layout_width="@dimen/px140"
        android:layout_height="@dimen/px48"
        android:text="早餐前"
        android:textColor="#333333"
        android:textSize="@dimen/px24"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/px35"
        android:layout_marginLeft="@dimen/px70"
        android:layout_toRightOf="@id/btn_early_morning"
        android:background="@mipmap/blood_sugar_alert_time_select"
        />

    <Button
        android:id="@+id/btn_after_breakfast"
        android:layout_width="@dimen/px140"
        android:layout_height="@dimen/px48"
        android:text="早餐后"
        android:textColor="#333333"
        android:textSize="@dimen/px24"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/px35"
        android:layout_marginLeft="@dimen/px70"
        android:layout_toRightOf="@id/btn_before_breakfast"
        android:background="@mipmap/blood_sugar_alert_time_select"
        />

    <Button
        android:id="@+id/btn_before_lunch"
        android:layout_width="@dimen/px140"
        android:layout_height="@dimen/px48"
        android:text="午餐前"
        android:textColor="#333333"
        android:textSize="@dimen/px24"
        android:layout_below="@id/btn_early_morning"
        android:layout_marginTop="@dimen/px20"
        android:layout_marginLeft="95px"
        android:background="@mipmap/blood_sugar_alert_time_select"
        />

    <Button
        android:id="@+id/btn_after_lunch"
        android:layout_width="@dimen/px140"
        android:layout_height="@dimen/px48"
        android:text="午餐后"
        android:textColor="#333333"
        android:textSize="@dimen/px24"
        android:layout_below="@id/btn_early_morning"
        android:layout_marginTop="@dimen/px20"
        android:layout_marginLeft="@dimen/px70"
        android:layout_toRightOf="@id/btn_early_morning"
        android:background="@mipmap/blood_sugar_alert_time_select"
        />

    <Button
        android:id="@+id/btn_before_dinner"
        android:layout_width="@dimen/px140"
        android:layout_height="@dimen/px48"
        android:text="晚餐前"
        android:textColor="#333333"
        android:textSize="@dimen/px24"
        android:layout_below="@id/btn_early_morning"
        android:layout_marginTop="@dimen/px20"
        android:layout_marginLeft="@dimen/px70"
        android:layout_toRightOf="@id/btn_before_breakfast"
        android:background="@mipmap/blood_sugar_alert_time_select"
        />

    <Button
        android:id="@+id/btn_after_dinner"
        android:layout_width="@dimen/px140"
        android:layout_height="@dimen/px48"
        android:text="晚餐后"
        android:textColor="#333333"
        android:textSize="@dimen/px24"
        android:layout_below="@id/btn_before_dinner"
        android:layout_marginTop="@dimen/px20"
        android:layout_marginLeft="95px"
        android:background="@mipmap/blood_sugar_alert_time_select"
        />

    <Button
        android:id="@+id/btn_before_sleep"
        android:layout_width="@dimen/px140"
        android:layout_height="@dimen/px48"
        android:text="睡前"
        android:textColor="#333333"
        android:textSize="@dimen/px24"
        android:layout_below="@id/btn_before_dinner"
        android:layout_marginTop="@dimen/px20"
        android:layout_marginLeft="@dimen/px70"
        android:layout_toRightOf="@id/btn_early_morning"
        android:background="@mipmap/blood_sugar_alert_time_select"
        />


    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="@dimen/px290"
        android:layout_height="@dimen/px68"
        android:text="取消"
        android:textColor="#46BEEB"
        android:textSize="@dimen/px30"
        android:layout_below="@id/btn_before_sleep"
        android:layout_marginTop="@dimen/px34"
        android:layout_marginLeft="41px"
        android:background="@mipmap/blood_sugar_cancel"
        />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="@dimen/px290"
        android:layout_height="@dimen/px68"
        android:text="保存"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/px30"
        android:layout_below="@id/btn_before_sleep"
        android:layout_marginTop="@dimen/px34"
        android:layout_marginLeft="89px"
        android:layout_toRightOf="@id/btn_cancel"
        android:background="@mipmap/blood_sugar_sure"
        />


</RelativeLayout>